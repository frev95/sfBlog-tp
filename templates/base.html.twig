			<div class="container">
				<div class="d-flex flex-wrap align-items-center justify-content-between">
					<h3>
						<a href={{ path('home') }} class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
							Blog Sf
						</a>
					</h3>

					<div class="text-end">
						<a href="#" class="btn btn-outline-light me-2">Connexion</a>
						<a href="#" class="btn btn-warning">Inscription</a>
					</div>
				</div>
			</div>
		</header>
		<div class="container-fluid pb-5"> 
			{% block body %}{% endblock %}
		</div>
		</body>
	</html>
